{
  "semi": false,
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": ["*.scss", "*.css"],
      "options": {
        "requirePragma": false,
        "parser": "scss"
      }
    },
    {
      "files": ["*.yml"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.html", "*.hbs"],
      "options": {
        "requirePragma": false,
        "parser": "html",
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}
